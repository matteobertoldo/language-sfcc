{
  "name": "language-sfcc",
  "version": "0.7.0",
  "description": "Adds syntax highlighting, completions, and snippets to ISML & Demandware Script files in Atom.",
  "main": "./lib/index",
  "keywords": [
    "salesforce-commerce-cloud",
    "sfcc",
    "syntax-highlighting",
    "isml",
    "isml-snippets",
    "demandware",
    "demandware-script"
  ],
  "author": {
    "name": "Matteo Bertoldo",
    "email": "mrbert93@gmail.com",
    "url": "https://github.com/matteobertoldo"
  },
  "bugs": {
    "url": "https://github.com/matteobertoldo/language-sfcc/issues"
  },
  "repository": "https://github.com/matteobertoldo/language-sfcc",
  "license": "MIT",
  "engines": {
    "atom": ">=1.21.0"
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "getProvider"
      }
    },
    "hyperclick": {
      "versions": {
        "0.1.0": "getProvider"
      }
    },
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.1.2",
    "remark-cli": "^9.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-preset-lint-recommended": "^5.0.0"
  },
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^7.2.2",
    "glob": "^7.1.6",
    "isml-linter": "^5.35.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,yml}": "prettier --write",
    "*.md": "remark --silently-ignore",
    "*.js": "eslint --fix"
  },
  "package-deps": [
    {
      "name": "atom-ide-ui"
    },
    {
      "name": "linter"
    }
  ],
  "scripts": {
    "format": "prettier --config .prettierrc --write .",
    "lint": "npm run lint:js && npm run lint:markdown",
    "lint:js": "eslint .",
    "lint:markdown": "remark .",
    "parse": "npm run format && npm run lint",
    "test": "atom --test spec"
  }
}
