{
  "env": {
    "atomtest": true,
    "browser": true,
    "es6": true,
    "node": true,
    "jasmine": true
  },
  "extends": ["plugin:prettier/recommended", "standard"],
  "globals": {
    "atom": true
  },
  "rules": {
    "global-require": "error",
    "import/extensions": ["error", "never"],
    "indent": ["error", 4],
    "no-console": "error",
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"]
  }
}
